<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav1)"/>
  <arg name="debug" default="false" />
  <arg name="print_debug" default="true" />

  <arg unless="$(arg debug)" name="launch_prefix" value=""/>
  <arg     if="$(arg debug)" name="launch_prefix" value="debug_roslaunch"/>

  <group if="$(arg print_debug)">
  <env name="ROSCONSOLE_CONFIG_FILE" value="$(find balloon_filter)/config/rosconsole/debug.conf"/>
</group>
  <group ns="$(arg uav_name)">

    <node pkg="nodelet" type="nodelet" name="balloon_filter" args="standalone balloon_filter/BalloonFilter" output="screen" launch-prefix="$(arg launch_prefix)" >

      <param name="uav_name" type="string" value="$(arg uav_name)" />
      <param name="uav_frame_id" type="string" value="$(arg uav_name)/fcu" />
      <param name="world_frame_id" type="string" value="$(arg uav_name)/local_origin" />
      <rosparam file="$(find balloon_filter)/config/filter_params.yaml" command="load" />

      <!-- Subscribers -->
      <remap from="~detections" to="object_detect/detected_balls" />
      <remap from="~detections_bfx" to="object_detect_bfx/detected_balls" />

      <!-- Publishers -->
      <remap from="~measurement_filter" to="~measurement_filter" />
      <remap from="~chosen_measurement" to="~chosen_measurement" />
      <remap from="~chosen_measurement_dbg" to="~chosen_measurement_dbg" />

      <remap from="~fitted_plane_marker" to="~fitted_plane_marker" />
      <remap from="~fitted_plane_pose" to="~fitted_plane_pose" />
      <remap from="~fit_points" to="~fit_points" />
      <remap from="~fitted_plane" to="~fitted_plane" />
      <remap from="~ball_prediction" to="~ball_prediction" />
      <remap from="~predicted_path" to="~predicted_path" />

      <remap from="~low_pass_filtered" to="~low_pass_filtered" />

    </node>

  </group>

</launch>

